<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">
    <LinearLayout
        android:padding="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOICE CHANGER"
            android:textColor="@color/white"
            android:textSize="@dimen/_20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageButton"
                android:onClick="menu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50dp"
                ads:srcCompat="@drawable/icon_menu" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/_30dp"
        android:id="@+id/nativeAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvStart"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_130sdp"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/_30dp"
            android:text="@string/text_start_recording"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"
            android:layout_marginRight="@dimen/_25dp"
            android:fontFamily="@font/product_sans_bold"
            android:background="@drawable/bt_btn_main"
            app:layout_constraintBottom_toTopOf="@+id/view"
            />

        <TextView
            android:paddingTop="@dimen/_20dp"
            android:id="@+id/tvCreation"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_130sdp"
            android:text="@string/text_my_creation"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"
            android:textStyle="bold"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/_30dp"
            android:fontFamily="@font/product_sans_bold"
            android:background="@drawable/bg_btn2_main"
            app:layout_constraintTop_toBottomOf="@+id/view" />
    </LinearLayout>


</LinearLayout>