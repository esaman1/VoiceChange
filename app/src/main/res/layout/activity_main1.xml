<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_main"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_66dp"
        android:layout_marginStart="@dimen/_45dp"
        android:layout_marginEnd="@dimen/_45dp"
        android:text="@string/text_start_recording"
        android:textColor="@color/color_3D4A8B"
        android:textSize="@dimen/_26sp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_12dp"
        android:drawablePadding="@dimen/_10dp"
        android:fontFamily="@font/product_sans_bold"
        android:drawableStart="@drawable/ic_micro"
        android:layout_marginBottom="@dimen/_12dp"
        android:background="@drawable/bg_start_recording"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"
        />

    <TextView
        android:id="@+id/tvCreation"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_66dp"
        android:layout_marginStart="@dimen/_45dp"
        android:layout_marginEnd="@dimen/_45dp"
        android:text="@string/text_my_creation"
        android:textColor="@color/color_3D4A8B"
        android:textSize="@dimen/_26sp"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/_10dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_12dp"
        android:fontFamily="@font/product_sans_bold"
        android:drawableStart="@drawable/ic_my_creation"
        android:background="@drawable/bg_start_recording"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/view"
        />

    <LinearLayout
        android:id="@+id/nativeAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>