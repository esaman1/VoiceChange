<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FragmentEffectChange">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_fragment3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/_25dp"
        android:layout_marginBottom="@dimen/_25dp"
        tools:listitem="@layout/song_list_row" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_weight="3"
        android:paddingTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/tvDelete_select"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_16dp"
            android:text="@string/text_delete"
            android:background="?attr/selectableItemBackground"
            app:drawableTopCompat="@drawable/ic_delete" />
        <!--    android:fontFamily="@font/product_sans_regular"-->
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_shareEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_16dp"
            android:text="Share"
            android:background="?attr/selectableItemBackground"
            app:drawableTopCompat="@drawable/share2" />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tvSelectEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_16dp"
            android:text="Select All"
            android:textSize="@dimen/_16sp"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/task1" />
        <!--    android:fontFamily="@font/product_sans_regular"-->
    </LinearLayout>
</FrameLayout>