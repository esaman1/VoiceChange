<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@drawable/border_item_effect"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:padding="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_4dp"
        android:layout_marginTop="@dimen/_4dp"
        >

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            android:minWidth="1.0sp"
            android:minHeight="1.0sp"
            android:padding="3.0dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play_button" />

        <TextView
            android:id="@+id/tv_name_effect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:text="@string/title_tone_of_voice"
            android:textColor="#ff000000"
            android:textSize="@dimen/text_size_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_play"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:padding="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_play_ef"
            />

        <ImageView
            android:id="@+id/btn_save"
             android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:padding="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_download_ef" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:padding="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_share_ef"/>

    </LinearLayout>


</LinearLayout>